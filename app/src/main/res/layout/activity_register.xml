<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/img_logo"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_logo"
            android:layout_width="@dimen/width_s40"
            android:layout_height="@dimen/height_s40"/>
        <TextView
            android:layout_marginTop="@dimen/margin_s3"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/img_logo"
            android:text="@string/desc_logo"
            android:textSize="@dimen/size_s3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp">
        <LinearLayout
            android:gravity="center"
            android:layout_margin="@dimen/margin_s1"
            android:layout_gravity="center"
            android:layout_width="@dimen/width_s70"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="@dimen/margin_s1"
                android:background="@drawable/ic_phone"
                android:layout_width="@dimen/width_s8"
                android:layout_height="@dimen/height_s9"/>
            <EditText
                android:id="@+id/edt_account"
                android:hint="@string/hint_account"
                android:theme="@style/MyEditText"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:layout_width="@dimen/width_s55"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_margin="@dimen/margin_s1"
            android:layout_gravity="center"
            android:layout_width="@dimen/width_s70"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="@dimen/margin_s1"
                android:background="@drawable/ic_lock"
                android:layout_width="@dimen/width_s8"
                android:layout_height="@dimen/height_s9"/>
            <EditText
                android:id="@+id/edt_password"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:theme="@style/MyEditText"
                android:layout_width="@dimen/width_s55"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_margin="@dimen/margin_s1"
            android:layout_gravity="center"
            android:layout_width="@dimen/width_s70"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="@dimen/margin_s1"
                android:background="@drawable/ic_lock"
                android:layout_width="@dimen/width_s8"
                android:layout_height="@dimen/height_s9"/>
            <EditText
                android:id="@+id/edt_confirm_password"
                android:hint="@string/hint_confirm_password"
                android:inputType="textPassword"
                android:theme="@style/MyEditText"
                android:layout_width="@dimen/width_s55"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_margin="@dimen/margin_s2"
            android:background="@drawable/shape_btn_register"
            android:text="@string/btn_cancel"
            android:textSize="@dimen/size_s5"
            android:textColor="@color/yellow"
            android:layout_width="@dimen/width_s30"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_register"
            android:layout_margin="@dimen/margin_s2"
            android:background="@drawable/shape_btn_login"
            android:text="@string/btn_register"
            android:textSize="@dimen/size_s5"
            android:textColor="@color/white"
            android:layout_width="@dimen/width_s30"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>