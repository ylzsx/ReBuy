<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="@dimen/margin_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/item_auction"
        android:layout_width="@dimen/width_s35"
        android:layout_height="@dimen/height_s35"/>
    <LinearLayout
        android:padding="@dimen/padding_s1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_content"
            android:text="@string/txt_lace_dress"
            android:textSize="@dimen/size_s4"
            android:lines="2"
            android:ellipsize="end"
            android:maxEms="13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_price"
            android:text="88.0"
            android:layout_marginLeft="@dimen/margin_s1"
            android:layout_marginTop="@dimen/margin_s2"
            android:layout_marginBottom="@dimen/margin_s1"
            android:textSize="@dimen/size_s5"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_data"
                android:layout_marginTop="@dimen/margin_s2"
                android:text="@string/txt_deadline"
                android:textSize="@dimen/size_s3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_deadline"
                android:text="2016.09.04"
                android:layout_marginTop="@dimen/margin_s2"
                android:textSize="@dimen/size_s3"
                android:layout_toRightOf="@id/txt_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_person"
                android:layout_below="@id/txt_data"
                android:text="@string/txt_person_num"
                android:textSize="@dimen/size_s3"
                android:layout_marginTop="@dimen/margin_s1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_person_num"
                android:text="10"
                android:textSize="@dimen/size_s3"
                android:layout_marginTop="@dimen/margin_s1"
                android:layout_toRightOf="@id/txt_person"
                android:layout_below="@id/txt_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/img_heart"
                android:layout_marginRight="@dimen/margin_s3"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/selector_favorite_card"
                android:layout_width="@dimen/width_s6"
                android:layout_height="@dimen/height_s6"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>